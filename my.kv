<MainWindow>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: [200,40,200,40]
        Label:
            text:"6 SİGMA SINAV SİSTEMİ GİRİŞİNE HOŞGELDİNİZ"
            font_size: 32
            color:"black"
            bold: True
            italic:True

